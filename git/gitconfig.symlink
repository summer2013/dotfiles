[user]
	name = Arz Yu
	email = arzyu@live.cn
[color]
[core]
	excludesfile = ~/.gitignore
	editor = vim
	pager = less -x4
[alias]
	lg = log --oneline --graph --pretty=format:\"%C(yellow)%h%d%Creset %C(blue)%an%Creset: %s - %Cgreen(%cr)%Creset\" --date-order --all
	co = checkout
	ci = commit
	st = status
[merge]
	tool = vimdiff
[push]
	default = simple
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
